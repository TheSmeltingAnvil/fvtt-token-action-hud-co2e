{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Projects */
    "composite": true,
    /* Modules */
    "module": "ES2022",
    "moduleResolution": "bundler",
    /* Emit */
    "noEmit": true,
    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
  },
  "include": ["gulpfile.ts", "vite.config.ts"],
}
